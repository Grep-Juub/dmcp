{
  "name": "@dmcp/indexer",
  "version": "1.0.0",
  "description": "DMCP Tool Indexer - Discovers and indexes MCP tools in Redis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dmcp-indexer": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "index": "tsx src/index.ts",
    "index:force": "tsx src/index.ts --force",
    "worker": "tsx src/index.ts --worker",
    "dev": "tsx watch src/index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "listr2": "^8.2.5",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
